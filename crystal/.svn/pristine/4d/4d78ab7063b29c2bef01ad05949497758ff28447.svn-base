/*==============================================================*/
/* Table: reply                                                 */
/*==============================================================*/
create table reply
(
   id                   int not null auto_increment,
   complaint_id         int,
   notification_id      int,
   staff_id             int,
   create_time          timestamp,
   update_time          timestamp,
   primary key (id),
   key AK_Key_2 (complaint_id)
);

/*==============================================================*/
/* Table: room                                                  */
/*==============================================================*/
create table room
(
   id                   int not null auto_increment,
   organization_id      int,
   position             varchar(20),
   price                smallint,
   capacity             tinyint default 0 comment '不包括咨询师',
   create_time          timestamp,
   update_time          timestamp,
   primary key (id),
   key AK_Key_2 (organization_id)
);

/*==============================================================*/
/* Table: service                                               */
/*==============================================================*/
create table service
(
   id                   int not null,
   consultant_id        int,
   date                 timestamp,
   period               tinyint,
   consult_type         tinyint,
   price                int,
   customer_tel         varchar(20),
   customer_name        varchar(5),
   problem              varchar(200),
   customer_gender      bool,
   consultant_name      varchar(5),
   place                varchar(100),
   state                tinyint,
   create_time          timestamp,
   update_time          timestamp,
   primary key (id),
   unique key AK_Key_2 (consultant_id, date, period)
);

/*==============================================================*/
/* Table: servicetimerange                                      */
/*==============================================================*/
create table servicetimerange
(
   id                   int,
   name                 varchar(15),
   low                  int,
   high                 int
);

/*==============================================================*/
/* Table: staff                                                 */
/*==============================================================*/
create table staff
(
   id                   int not null auto_increment,
   account              varchar(20),
   password             varchar(32),
   salt                 varchar(32),
   name                 varchar(8),
   create_time          timestamp,
   update_time          timestamp,
   primary key (id)
);

/*==============================================================*/
/* Table: turnover                                              */
/*==============================================================*/
create table turnover
(
   id                   int not null,
   amount               int,
   payment_mode         tinyint,
   remark               varchar(100),
   handler              varchar(32),
   create_time          timestamp,
   update_time          timestamp,
   primary key (id)
);

/*==============================================================*/
/* Table: user                                                  */
/*==============================================================*/
create table user
(
   id                   int not null auto_increment,
   nickname             varchar(10),
   head                 varchar(100),
   phone_number         varchar(20),
   union_id             char(29),
   gzh_open_id          char(28),
   password             varchar(32),
   salt                 varchar(32),
   create_time          timestamp,
   update_time          timestamp,
   primary key (id),
   unique key AK_Key_2 (union_id),
   unique key AK_Key_3 (gzh_open_id)
);

/*==============================================================*/
/* Table: wxorder                                               */
/*==============================================================*/
create table wxorder
(
   id                   varchar(32) not null,
   merchant_id          varchar(32),
   payment_deadline     datetime,
   qrcode_link          varchar(64),
   prepay_id            varchar(64),
   create_time          timestamp,
   update_time          timestamp,
   primary key (id),
   key AK_Key_2 (merchant_id)
);

