   period               tinyint,
   create_time          timestamp,
   update_time          timestamp,
   primary key (id),
   key AK_Key_2 (room_id)
);

/*==============================================================*/
/* Table: placechange                                           */
/*==============================================================*/
create table placechange
(
   id                   int not null auto_increment,
   room_id              int,
   date                 date,
   period               tinyint,
   avaliable            tinyint,
   create_time          timestamp,
   update_time          timestamp,
   primary key (id),
   key AK_Key_2 (room_id)
);

/*==============================================================*/
/* Table: placeservice                                          */
/*==============================================================*/
create table placeservice
(
   id                   int not null auto_increment,
   service_id           int,
   room_id              int,
   date                 date,
   period               tinyint,
   price                smallint,
   create_time          timestamp,
   update_time          timestamp,
