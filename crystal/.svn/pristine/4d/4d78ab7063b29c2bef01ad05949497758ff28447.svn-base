/*==============================================================*/
/* Table: article                                               */
/*==============================================================*/
create table article
(
   id                   int not null auto_increment,
   author_id            int,
   author_name          varchar(10),
   title                varchar(20),
   content              text,
   cover                varchar(100),
   views                int,
   audit_state          tinyint,
   createtime           timestamp,
   updatetime           timestamp,
   primary key (id),
   key AK_Key_2 (author_id)
);

/*==============================================================*/
/* Table: article_label                                         */
/*==============================================================*/
create table article_label
(
   id                   int not null auto_increment,
   label_id             int,
   article_id           int,
   primary key (id),
   key AK_Key_2 (label_id),
   key AK_Key_3 (article_id)
);

/*==============================================================*/
/* Table: assessment                                            */
/*==============================================================*/
create table assessment
(
   id                   int not null auto_increment,
   author_id            int,
   consultant_id        int,
   service_id           int,
   score                tinyint,
   content              varchar(100),
   head                 varchar(100),
   nickname             varchar(10),
   consult_type         tinyint,
   anonymous            tinyint,
   create_time          timestamp,
   update_time          timestamp,
   primary key (id),
   key AK_Key_2 (consultant_id)
);

/*==============================================================*/
/* Table: authinfo                                              */
/*==============================================================*/
create table authinfo
(
   id                   int not null auto_increment,
   consultant_id        int,
   name                 varchar(8),
   gender               tinyint,
   birthday             date,
   tel                  varchar(20),
   city                 int,
   photo                varchar(100),
   interview_price      smallint,
   video_price          smallint,
   tel_price            smallint,
   introduce            varchar(511),
   training             varchar(511),
   education            varchar(511),
   work_experience      varchar(511),
   supervisory_experience varchar(511),
   cases                varchar(511),
   certificate_no       varchar(20),
   certificate_type     tinyint,
   certificate_pic1     varchar(100),
   certificate_pic2     varchar(100),
   expert_area          varchar(100),
   oriented_crowd       varchar(100),
   create_time          timestamp,
   update_time          timestamp,
   primary key (id),
   key AK_Key_2 (consultant_id)
);

/*==============================================================*/
/* Table: city                                                  */
/*==============================================================*/
create table city
(
   id                   int,
   name                 varchar(10)
);

/*==============================================================*/
/* Table: collection                                            */
/*==============================================================*/
create table collection
(
   userid               int not null,
   articleid            int not null,
   primary key (userid, articleid)
);

/*==============================================================*/
/* Table: comment                                               */
/*==============================================================*/
create table comment
(
   id                   int not null auto_increment,
   user_id              int,
   article_id           int,
   content              varchar(100),
   head                 varchar(100),
   nickname             varchar(10),
   anonymous            tinyint,
   create_time          timestamp,
   update_time          timestamp,
   primary key (id),
   key AK_Key_2 (article_id)
);

/*==============================================================*/
/* Table: complaint                                             */
/*==============================================================*/
create table complaint
(
   id                   int not null auto_increment,
   user_id              int,
   content              varchar(200),
   target               tinyint,
   status               tinyint,
   createTime           timestamp,
   updateTime           timestamp,
   primary key (id)
);

/*==============================================================*/
/* Table: consultant                                            */
/*==============================================================*/
create table consultant
(
   consultant_id        int not null auto_increment,
   userid               int,
   name                 varchar(8),
   gender               bool,
   birthday             date,
   tel                  varchar(20),
   city                 int,
   photo                varchar(100),
   interview_price      smallint,
   video_price          smallint,
   tel_price            smallint,
   introduce            varchar(511),
   auth_state           tinyint,
   expert_area          varchar(100),
   oriented_crowd       varchar(100),
   service_time         int,
   average_score        tinyint,
   order_score          int,
   create_time          timestamp,
   update_time          timestamp,
   primary key (consultant_id),
   unique key AK_Key_2 (userid)
);

/*==============================================================*/
/* Table: consultantchange                                      */
/*==============================================================*/
create table consultantchange
(
   consultant_id        int not null,
   date                 date not null,
   period               tinyint not null,
   avaliable            bool,
   consult_mode         tinyint,
   create_time          timestamp,
   update_time          timestamp,
   primary key (consultant_id, date, period)
);

/*==============================================================*/
/* Table: consultantdetail                                      */
/*==============================================================*/
create table consultantdetail
(
   id                   int not null auto_increment,
   consultan_tid        int,
   training             varchar(511),
   education            varchar(511),
   work_experience      varchar(511),
   supervisory_experience varchar(511),
   cases                varchar(511),
   certificate_no       varchar(20),
   certificate_type     tinyint,
   certificate_pic1     varchar(100),
   certificate_pic2     varchar(100),
   create_time          timestamp,
   update_time          timestamp,
   primary key (id),
   key AK_Key_2 (consultan_tid)
);

/*==============================================================*/
/* Table: consultanttemplate                                    */
/*==============================================================*/
create table consultanttemplate
(
   consultant_id        int not null,
   weekday              tinyint not null,
   period               tinyint not null,
   consult_mode         tinyint,
   create_time          timestamp,
   update_time          timestamp,
   primary key (consultant_id, weekday, period)
);

/*==============================================================*/
/* Table: delaytask                                             */
/*==============================================================*/
create table delaytask
(
   id                   int not null auto_increment,
   service_id           int,
   trigger_time         timestamp,
   state                tinyint,
   type                 tinyint,
   create_time          timestamp,
   update_time          timestamp,
   primary key (id)
);

/*==============================================================*/
/* Table: expertarea                                            */
/*==============================================================*/
create table expertarea
(
   id                   integer not null auto_increment,
   parent_id            integer,
   name                 varchar(10),
   primary key (id)
);

/*==============================================================*/
/* Table: follow                                                */
/*==============================================================*/
create table follow
(
   follower_id          int not null,
   consultant_id        int not null,
   primary key (follower_id, consultant_id)
);

/*==============================================================*/
/* Table: `label`                                               */
/*==============================================================*/
create table `label`
(
   id                   integer not null auto_increment,
   name                 varchar(10),
   parent_id            integer,
   primary key (id)
);

/*==============================================================*/
/* Table: notification                                          */
/*==============================================================*/
create table notification
(
   id                   int not null auto_increment,
   user_id              int,
   sender               int default 0,
   sender_type          int,
   content              varchar(200),
   has_read             tinyint,
   create_time          timestamp,
   update_time          timestamp,
   primary key (id),
   key AK_Key_2 (user_id)
);

/*==============================================================*/
/* Table: `order`                                               */
/*==============================================================*/
create table `order`
(
   id                   int not null,
   merchant_id          varchar(32) not null,
   user_id              int,
   payment_time         timestamp,
   amount               int,
   state                tinyint,
   payment_mode         tinyint,
   create_time          timestamp,
   update_time          timestamp,
   primary key (id),
   unique key AK_Key_2 (merchant_id)
);

/*==============================================================*/
/* Table: organization                                          */
/*==============================================================*/
create table organization
(
   id                   int not null auto_increment,
   name                 varchar(20),
   address              varchar(50),
   create_time          timestamp,
   update_time          timestamp,
   primary key (id)
);

/*==============================================================*/
/* Table: orientedcrowd                                         */
/*==============================================================*/
create table orientedcrowd
(
   id                   int not null auto_increment,
   name                 varchar(10),
   primary key (id)
);

/*==============================================================*/
/* Table: palcetemplate                                         */
/*==============================================================*/
create table palcetemplate
(
