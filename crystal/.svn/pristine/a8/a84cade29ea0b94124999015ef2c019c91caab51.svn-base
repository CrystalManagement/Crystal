/*==============================================================*/
/* Table: article                                               */
/*==============================================================*/
create table article
(
   id                   int not null auto_increment,
   author_id            int,
   author_name          varchar(10),
   title                varchar(20),
   content              text,
   cover                varchar(1000),
   views                int,
   audit_state          tinyint,
   createtime           timestamp default CURRENT_TIMESTAMP,
   updatetime           timestamp default CURRENT_TIMESTAMP,
   primary key (id),
   key AK_Key_2 (author_id)
);

/*==============================================================*/
/* Table: article_label                                         */
/*==============================================================*/
create table article_label
(
   id                   int not null auto_increment,
   label_id             int,
   article_id           int,
   primary key (id),
   key AK_Key_2 (label_id),
   key AK_Key_3 (article_id)
);

/*==============================================================*/
/* Table: assessment                                            */
/*==============================================================*/
create table assessment
(
   id                   int not null auto_increment,
   author_id            int,
   consultant_id        int,
   service_id           int,
   score                tinyint,
   content              varchar(100),
   head                 varchar(1000),
   nickname             varchar(10),
   consult_type         tinyint,
   anonymous            tinyint,
   create_time          timestamp default CURRENT_TIMESTAMP,
   update_time          timestamp default CURRENT_TIMESTAMP,
   primary key (id),
   key AK_Key_2 (consultant_id)
);

/*==============================================================*/
/* Table: authinfo                                              */
/*==============================================================*/
create table authinfo
(
   id                   int not null auto_increment,
   consultant_id        int,
   tel                  varchar(20),
   city                 int,
   photo                varchar(100),
   introduce            varchar(511),
   training             varchar(2047),
   education            varchar(2047),
   work_experience      varchar(2047),
   supervisory_experience varchar(2047),
   cases                varchar(2047),
   expert_area          varchar(100),
   oriented_crowd       varchar(100),
   check_progress       varchar(300),
   state                tinyint,
   create_time          timestamp default CURRENT_TIMESTAMP,
   update_time          timestamp default CURRENT_TIMESTAMP,
   primary key (id),
   key AK_Key_2 (consultant_id)
);

/*==============================================================*/
/* Table: city                                                  */
/*==============================================================*/
create table city
(
   id                   int not null auto_increment,
   name                 varchar(10),
   primary key (id)
);

/*==============================================================*/
/* Table: collection                                            */
/*==============================================================*/
create table collection
(
   id                   int not null auto_increment,
   userid               int not null,
   articleid            int not null,
   primary key (id)
);

/*==============================================================*/
/* Table: comment                                               */
/*==============================================================*/
create table comment
(
   id                   int not null auto_increment,
   user_id              int,
   article_id           int,
   content              varchar(100),
   head                 varchar(1000),
   nickname             varchar(10),
   anonymous            tinyint,
   create_time          timestamp default CURRENT_TIMESTAMP,
   update_time          timestamp default CURRENT_TIMESTAMP,
   primary key (id),
   key AK_Key_2 (article_id)
);

/*==============================================================*/
/* Table: complaint                                             */
/*==============================================================*/
create table complaint
(
   id                   int not null auto_increment,
   user_id              int,
   content              varchar(200),
   target               tinyint,
   status               tinyint,
   createTime           timestamp default CURRENT_TIMESTAMP,
   updateTime           timestamp default CURRENT_TIMESTAMP,
   primary key (id)
);

/*==============================================================*/
/* Table: consultant                                            */
/*==============================================================*/
create table consultant
(
   id                   int not null auto_increment,
   userid               int,
   name                 varchar(8),
   gender               bool,
   birthday             date,
   certificate_no       varchar(20),
   certificate_type     tinyint,
   certificate_pic1     varchar(1000),
   certificate_pic2     varchar(1000),
   tel                  varchar(20),
   city                 int,
   photo                varchar(100),
   introduce            varchar(511),
   training             varchar(2047),
   education            varchar(2047),
   work_experience      varchar(2047),
   supervisory_experience varchar(2047),
   cases                varchar(2047),
   expert_area          varchar(100),
   oriented_crowd       varchar(100),
   auth_state           tinyint,
   interview_price      smallint,
   video_price          smallint,
   tel_price            smallint,
   price                smallint,
   service_time         int,
   average_score        tinyint,
   order_score          int,
   visible              bool default true,
   create_time          timestamp default CURRENT_TIMESTAMP,
   update_time          timestamp default CURRENT_TIMESTAMP,
   primary key (id),
   unique key AK_Key_2 (userid),
   key AK_Key_3 (city),
   key AK_Key_4 (price),
   key AK_Key_5 (service_time),
   key AK_Key_6 (average_score)
);

